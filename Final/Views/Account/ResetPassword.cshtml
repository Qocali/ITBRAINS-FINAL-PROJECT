
@model ResetPasswordVM

<!-- Reset start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Tezele</h2>
                            <span>Zehmet olmasa Form doldurun</span>
                        </div>
                        <div class="login-form">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <form class="pt-3" method="post">
                                <input asp-for="@Model.Email" type="hidden" />
                                <input asp-for="@Model.Token" type="hidden" />
                                <label for="exampleInputEmail1">E-mail</label>
                                <input asp-for="@Model.Email" class="form-control form-control-lg border-left-0">
                                <span class="text-danger" asp-validation-for="@Model.Email"></span>
                                <label for="exampleInputEmail1">Parol</label>
                                <input asp-for="@Model.Password" class="form-control form-control-lg border-left-0">
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                                <label for="exampleInputEmail1">Yeniden parol</label>
                                <input asp-for="@Model.CheckPassword" class="form-control form-control-lg border-left-0">
                                <span class="text-danger" asp-validation-for="@Model.CheckPassword"></span>

                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        
                                    </div>
                                    <button type="submit" class="default-btn">Parolu yenile</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Reset end -->
